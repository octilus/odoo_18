<templates id="template" xml:space="preserve">
	<t t-name="MobileAppsFunnelInherit" t-inherit="web.MobileAppsFunnel" t-inherit-mode="extension">
        <xpath expr="//div[@class='d-flex']" position="attributes">
            <attribute name="class">d-flex gap-2</attribute>
        </xpath>

        <xpath expr="//img[@t-att-src='androidAppstoreImagePath']/.." position="replace">
            <a class="d-block mx-auto" href="https://play.google.com/store/apps/details?id=com.bizople.facilsoftmobile" target="blank">
                <img alt="On Google Play" class="d-block mx-auto img img-fluid" src="/facilsoft_theme_backend/static/src/image/facilsoft-qr-code-android.png"/>
            </a>
        </xpath>

        <xpath expr="//img[@t-att-src='iosAppstoreImagePath']/.." position="replace">
            <a class='d-block mx-auto' href="https://apps.apple.com/in/app/facilsoft-odoo-mobile-app/id6449771773" target="blank">
                <img alt="On Apple Store" class="d-block mx-auto img img-fluid" src="/facilsoft_theme_backend/static/src/image/facilsoft-qr-code-apple.png"/>
            </a>
        </xpath>
	</t>
</templates>